{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major"
    },
    {
      "matchLanguages": ["java"],
      "groupName": "java"
    },
    {
      "matchPaths": [".github/workflows/**"],
      "groupName": "workflows"
    },
    {
      "matchPaths": ["gradle/**"],
      "groupName": "gradle"
    }
  ]
}
